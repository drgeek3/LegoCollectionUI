
<form @onsubmit=OnSearchClicked>
	<table class="table table-hover" style="max-width:630px">
		<tbody>
			<tr>
				<td>
					<input class="form-control border-2" style="max-width:400px" placeholder="Search..." @bind="searchItem" />
				</td>
				<td>
					<button class="form-control btn btn-primary" style="max-width:200px">Search</button>
				</td>
			</tr>
		</tbody>
	</table>
</form>


@code {

	[Parameter]
	public EventCallback<string> OnSearch { get; set; }

	private string? searchItem;

	private async Task OnSearchClicked()
	{
		await OnSearch.InvokeAsync(searchItem);
	}
}
