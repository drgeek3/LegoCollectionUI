@inject OwnedClient Client
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="modal fade" id="@GetModalId(Brick)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="@Confirm">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]    
    public OwnedBrick? Brick { get; set; }

    private string title = string.Empty;

    protected override void OnParametersSet()
    {
        title = $"Delete {Brick!.BrickId}?";
    }

    public static string GetModalId(OwnedBrick? brick)
    {
        ArgumentNullException.ThrowIfNull(brick);
        return $"deleteModal-{brick.Id}";
    }

    private void Confirm()
    {
        Client.DeleteBrick(Brick!.Id);
        NavigationManager.Refresh();
    }

}
